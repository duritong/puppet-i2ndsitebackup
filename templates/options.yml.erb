incremental_days: '<%= @config['incremental_days'] || '120' %>'
full_count: '<%= @config['full_count'] || '2' %>'
gpg_key: '<%= @config['gpg_key'] %>'
passphrase: '<%= @config['gpg_passphrase'] %>'
source_root: '<%= @config['source_root'] %>'
hosts:
<% @config['hosts'].keys.sort do |host| -%>
  '<%= host %>':
    root: '<%= @config['hosts'][host]['root'] %>'
    user: '<%= @config['hosts'][host]['user'] %>'
<% end -%>
archive_dir: '<%= @config['archive_dir'] %>'
targets:
<% @config['targets'].keys.sort.each do |k| -%>
  '<%= k %>': <%= @config['targets'][k] %>
<% end-%>
